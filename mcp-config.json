{
  "mcpServers": {
    "living-dev-agent": {
      "command": "python",
      "args": ["-m", "src.mcp_server"],
      "cwd": ".",
      "env": {
        "PYTHONPATH": ".",
        "LDA_WORKSPACE": ".",
        "LDA_LOG_LEVEL": "INFO"
      },
      "capabilities": {
        "tools": [
          "create_tldl_entry",
          "capture_code_snapshot", 
          "start_console_commentary",
          "run_validation_suite",
          "create_task",
          "start_time_tracking",
          "generate_timesheet",
          "export_session_data"
        ],
        "resources": [
          "tldl://entries/*",
          "snapshots://code/*",
          "commentary://sessions/*",
          "tasks://epics/*",
          "time://tracking/*"
        ],
        "prompts": [
          "create_epic_quest",
          "debug_session_setup",
          "architecture_review",
          "documentation_sprint"
        ]
      },
      "settings": {
        "auto_validate": true,
        "preserve_sessions": true,
        "enable_epic_narration": true,
        "cheek_preservation_mode": "aggressive"
      }
    },
    
    "validation-server": {
      "command": "python", 
      "args": ["-m", "src.validation_mcp_server"],
      "cwd": ".",
      "env": {
        "PYTHONPATH": ".",
        "VALIDATION_TIMEOUT": "300"
      },
      "capabilities": {
        "tools": [
          "validate_tldl_docs",
          "run_symbolic_linting",
          "check_debug_overlay_health",
          "analyze_system_architecture",
          "generate_health_report"
        ]
      },
      "settings": {
        "auto_fix_enabled": false,
        "report_format": "markdown",
        "health_threshold": 70
      }
    },
    
    "taskmaster-server": {
      "command": "python",
      "args": ["-m", "src.taskmaster_mcp_server"], 
      "cwd": ".",
      "env": {
        "PYTHONPATH": ".",
        "TASKMASTER_WORKSPACE": "."
      },
      "capabilities": {
        "tools": [
          "create_epic_task",
          "update_task_status",
          "start_timer",
          "stop_timer", 
          "generate_epic_report",
          "export_task_to_tldl"
        ],
        "resources": [
          "tasks://epics/*",
          "tasks://individual/*",
          "time://sessions/*"
        ]
      },
      "settings": {
        "epic_mode": true,
        "auto_tldl_generation": true,
        "time_tracking_integration": true
      }
    }
  },
  
  "clientConfig": {
    "timeout": 30000,
    "retries": 3,
    "logLevel": "info"
  },
  
  "featureFlags": {
    "enableConsoleCommentary": true,
    "enableCodeSnapshots": true,
    "enableTaskmaster": true,
    "enableChronas": true,
    "enableValidationSuite": true,
    "enableEpicNarration": true,
    "enableCheekPreservation": true
  },
  
  "workspaceSettings": {
    "defaultTldlPath": "TLDL/entries",
    "defaultSnapshotPath": "debug/snapshots", 
    "defaultTaskPath": "tasks",
    "defaultTimePath": "time_tracking",
    "autoCreateDirectories": true
  },
  
  "integrations": {
    "github": {
      "enabled": true,
      "autoCreateIssues": false,
      "autoUpdatePRs": false
    },
    "vscode": {
      "enabled": true,
      "extensionRecommendations": [
        "ms-python.python",
        "ms-vscode.vscode-json",
        "yzhang.markdown-all-in-one"
      ]
    },
    "copilot": {
      "enabled": true,
      "personalityProfile": "bootstrap_sentinel",
      "adventureMode": true,
      "cheekPreservationProtocol": true
    }
  },
  
  "debugSettings": {
    "enableVerboseLogging": false,
    "enableStackTraces": true,
    "enablePerformanceMonitoring": true,
    "maxLogRetention": "7d"
  },
  
  "securitySettings": {
    "enableSecureMode": true,
    "restrictFileAccess": true,
    "allowedPaths": [
      "TLDL/**",
      "docs/**", 
      "src/**",
      "scripts/**",
      "tasks/**",
      "time_tracking/**",
      "debug/**"
    ],
    "blockedCommands": [
      "rm -rf",
      "sudo",
      "su",
      "chmod 777"
    ]
  },
  
  "performanceSettings": {
    "maxConcurrentOperations": 5,
    "operationTimeoutMs": 30000,
    "cacheEnabled": true,
    "cacheTtlMinutes": 60
  },
  
  "notificationSettings": {
    "enableAchievementNotifications": true,
    "enableErrorNotifications": true,
    "enableValidationNotifications": true,
    "enableTimerNotifications": true,
    "notificationLevel": "info"
  },
  
  "experimentalFeatures": {
    "aiPoweredInsights": false,
    "automaticDocumentation": false,
    "predictiveDebugging": false,
    "collaborativeEditing": false
  },
  
  "metadata": {
    "configVersion": "2.0.0",
    "templateVersion": "2.0.0",
    "createdBy": "Living Dev Agent Template",
    "lastModified": "2025-01-15T22:00:00Z",
    "compatibleMcpVersion": ">=0.4.0"
  }
}
