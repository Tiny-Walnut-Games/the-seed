{
  "name": "warbler-core",
  "version": "1.0.0",
  "description": "Core runtime engine for Warbler NPC conversation and narration system",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "npc",
    "conversation",
    "narration",
    "game",
    "dialogue",
    "warbler"
  ],
  "author": "TWG Team",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jmeyer1980/TWG-TLDA.git",
    "directory": "packages/warbler-core"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}